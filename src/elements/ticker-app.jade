+polymer-element
  core-scroll-header-panel(
    on-core-header-transform='{{onCoreHeaderTransform}}'
  )
    core-toolbar
      paper-icon-button(icon='menu')
      span(flex class='l-margin-0 t-normal') Polymer
      paper-icon-button(icon='refresh' on-tap='{{onRefresh}}')
      paper-icon-button(icon='search')

    .content(class='l-padding-2')
      template(repeat='{{ event in githubEvents }}')
        ticker-github-events-card(block class='l-margin-b1' data='[[event]]')
